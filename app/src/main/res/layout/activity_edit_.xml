<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Edit_Activity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editName_tv"
        android:hint="edit name"
        android:layout_marginTop="5dp"
        android:textSize="23dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/editTime_tv"
        android:hint="edit time"
        android:textSize="26dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/editDate_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="edit date"
        android:textSize="26dp"
        />
    </LinearLayout>

    <EditText
        android:id="@+id/editDesc_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="edit description"
        android:textSize="23dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="SAVE"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        />

</LinearLayout>